{
  "compression": "maximum",
  "productName": "Electron_Template",
  "appId": "org.Electron_Template",
  "copyright": "MIT",
  "asar": true,
  "directories": {
    "output": "out"
  },
  "publish": [
    {
      "provider": "generic",
      "url": "http://127.0.0.1:3000/"
    }
  ],
  "files": [
    "out/electron/**/*",
    "node_modules/",
    "dist/"
  ],
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "resources/icons/icon.ico",
    "uninstallerIcon": "resources/icons/unicon.ico",
    "installerHeaderIcon": "resources/icons/icon.ico",
    "installerSidebar": "resources/icons/modern-wizard.bmp",
    "uninstallerSidebar": "resources/icons/modern-wizard.bmp",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Electron_Template",
    "include": "resources/script/installer.nsh"
  },
  "dmg": {
    "contents": [
      {
        "x": 410,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 130,
        "y": 150,
        "type": "file"
      }
    ]
  },
  "mac": {
    "icon": "resources/icons/icon.icns"
  },
  "win": {
    "icon": "resources/icons/icon.ico",
    "requestedExecutionLevel": "highestAvailable",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ]
  },
  "linux": {
    "icon": "resources/icons"
  }
}