{
  "compression": "maximum",
  "directories": {
    "output": "out"
  },
  "files": [
    {
      "from": "./",
      "to": "./",
      "filter": ["package.json"]
    },
    {
      "from": "dist",
      "to": "./",
      "filter": ["**/*"]
    },
    {
      "from": "resources/inside",
      "to": "inside/",
      "filter": ["**/*"]
    }
  ],
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowElevation": true,
    "installerIcon": "scripts/icons/icon.ico",
    "installerHeaderIcon": "scripts/icons/icon.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "include": "scripts/cfg/installer.nsh"
  },
  "dmg": {
    "sign": false,
    "contents": [
      {
        "x": 410,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 130,
        "y": 150,
        "type": "file"
      }
    ]
  },
  "mac": {
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "scripts/cfg/mas/entitlements.mas.plist",
    "entitlementsInherit": "scripts/cfg/mas/entitlements.mas.inherit.plist",
    "entitlementsLoginHelper": "scripts/cfg/mas/entitlements.mas.loginhelper.plist",
    "category": "public.app-category.business",
    "icon": "scripts/icons/icon.icns"
  },
  "win": {
    "icon": "scripts/icons/icon.ico",
    "requestedExecutionLevel": "asInvoker",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ]
  },
  "linux": {
    "icon": "scripts/icons",
    "category": "Utility"
  }
}
