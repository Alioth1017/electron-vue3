{
  "name": "Electron_Template",
  "productName": "Electron_Template",
  "version": "0.1.0",
  "description": "Electron_Template",
  "main": "dist/main.js",
  "private": true,
  "author": "youliso@Hotmail.com",
  "license": "GPL",
  "scripts": {
    "start": "electron src/main.js",
    "start -gulp": "gulp cfg && gulp css && gulp js && gulp html && electron .",
    "build": "electron-builder",
    "build -gulp": "gulp cfg && gulp css && gulp js && gulp html && electron-builder"
  },
  "build": {
    "productName": "Electron_Template",
    "appId": "org.Electron_Template",
    "directories": {
      "output": "out"
    },
    "files": [
      "out/electron/**/*",
      "node_modules/",
      "dist/"
    ],
    "asar": false,
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icons/icon.ico",
      "uninstallerIcon": "build/icons/unicon.ico",
      "installerHeaderIcon": "build/icons/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "KlLOGIN",
      "include": "build/script/installer.nsh"
    },
    "win": {
      "icon": "build/icons/icon.ico",
      "requestedExecutionLevel": "highestAvailable",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "request": "^2.88.0"
  },
  "devDependencies": {
    "electron": "^6.0.10",
    "electron-builder": "^21.2.0",
    "gulp": "^4.0.2",
    "gulp-htmlmin": "^5.0.1",
    "gulp-js-obfuscator": "^1.0.0",
    "gulp-minify-css": "^1.2.4",
    "gulp-remove-empty-lines": "^0.1.0",
    "gulp-remove-html": "^1.3.0"
  }
}
