{
  "name": "Electron_Template",
  "productName": "Electron_Template",
  "version": "0.1.0",
  "description": "Electron_Template",
  "main": "dist/main.js",
  "private": true,
  "author": "youliso@Hotmail.com",
  "license": "MIT",
  "scripts": {
    "start": "electron src/main/main.js",
    "start -gulp": "gulp cfg && gulp css && gulp js && gulp html && electron .",
    "build": "electron-builder",
    "build -gulp": "gulp cfg && gulp css && gulp js && gulp html && electron-builder -w"
  },
  "build": {
    "productName": "Electron_Template",
    "appId": "org.Electron_Template",
    "copyright": "MIT",
    "directories": {
      "output": "out"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://github.com/youliso/Electron_Template/releases"
      }
    ],
    "files": [
      "out/electron/**/*",
      "node_modules/",
      "dist/"
    ],
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "src/resources/icons/icon.ico",
      "uninstallerIcon": "src/resources/icons/unicon.ico",
      "installerHeaderIcon": "src/resources/icons/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "KlLOGIN",
      "include": "src/resources/script/installer.nsh"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "src/resources/icons/icon.icns"
    },
    "win": {
      "icon": "src/resources/icons/icon.ico",
      "requestedExecutionLevel": "highestAvailable",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "icon": "src/resources/icons"
    }
  },
  "dependencies": {
    "lowdb": "^1.0.0",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "electron": "^7.0.0",
    "electron-builder": "^21.2.0",
    "gulp": "^4.0.2",
    "gulp-htmlmin": "^5.0.1",
    "gulp-js-obfuscator": "^1.0.0",
    "gulp-minify-css": "^1.2.4",
    "gulp-remove-empty-lines": "^0.1.0",
    "gulp-remove-html": "^1.3.0"
  }
}
