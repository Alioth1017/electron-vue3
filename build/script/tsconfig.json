{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "noImplicitAny": false,
    "sourceMap": true,
    "isolatedModules": true,
    "allowJs": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["./**/*"]
}
